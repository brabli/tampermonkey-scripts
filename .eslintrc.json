{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended"
    ],

    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "jsdoc"
    ],
    "rules": {
        "indent": ["warn", 4],
        "jsdoc/require-param-description": 0,
        "jsdoc/require-returns-description": 0,
        "jsdoc/check-line-alignment": 1,
        "jsdoc/no-blank-block-descriptions": 1
    }
}
